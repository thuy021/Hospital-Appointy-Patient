<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:recyclerviewfastscroller="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kltn.hospitalappointy.Fragment.Fragment_Doctor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/search_by_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:drawableRight="@mipmap/search"
                android:id="@+id/doctor_searchtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search By Doctor"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:focusableInTouchMode="true"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/doctor_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>


    </LinearLayout>

</FrameLayout>